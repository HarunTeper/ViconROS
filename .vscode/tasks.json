{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // ------------------- BUILD -------------------
        {
            "label": "ROS2Build",
            "type": "shell",
            "command": "cd packages && colcon build --symlink-install --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON && mv build/compile_commands.json ..",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        // ------------------- LAUNCH MARKER_PUBLISHER -------------------
        {
            "label": "Launch marker_publisher",
            "type": "shell",
            "command": ". ./packages/install/setup.sh && ros2 run auna_vicon marker_publisher_main",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ]
}